{
  "compilerOptions": {
    "outDir": "./dist",       // Where the code goes after building
    "rootDir": "./",          // Where your .ts files are (the root)
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],     // Include all TS files in the project
  "exclude": ["node_modules"]
}